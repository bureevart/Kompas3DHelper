<UserControl x:Class="Kompas3DHelper.DrawingUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kompas3DHelper"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue">
        <Grid x:Name="DrawingGrid" Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <CheckBox Grid.Row="0" x:Name="DrawingCheck1" Content="Проверка расположения объектов на заданных слоях" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <CheckBox Grid.Row="1" x:Name="DrawingCheck2" Content="Отсутствие скрытых объектов в поле чертежа" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <CheckBox Grid.Row="2" x:Name="DrawingCheck3" Content="Отсутствие объектов за пределами чертежа" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <CheckBox Grid.Row="3" x:Name="DrawingCheck4" Content="Целостность видов (к виду не применялась команда 'Разрушить')" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <CheckBox Grid.Row="4" x:Name="DrawingCheck5" Content="Виды, вспомогательные линии и размеры не должны пересекать границу листа" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <CheckBox Grid.Row="5" x:Name="DrawingCheck6" Content="Проверка размеров на ручное внесение текстовых изменений" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</UserControl>
